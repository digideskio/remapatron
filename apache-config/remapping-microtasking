# remapping microstaking apache config

# webapp

Alias /mr-lanecount /home/ubuntu/mr-lanecount/webapp

<Directory /home/ubuntu/mr-lanecount/webapp>
    Order deny,allow
    Allow from all
</Directory>

# config for the python script

WSGIScriptAlias /mrsvc /home/ubuntu/mr-lanecount/service/get.py/
Alias /mrsvc/static /home/ubuntu/mr-lanecount/service/static/

AddType text/html .py

<Directory /home/ubuntu/mr-lanecount/service/>
        Order Allow,Deny
        Allow from all
</Directory>
